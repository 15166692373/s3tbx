<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>s2tbx</artifactId>
        <groupId>org.esa.s2tbx</groupId>
        <version>0.6.0</version>
    </parent>

    <artifactId>s2tbx-rapideye-reader</artifactId>
    <packaging>jar</packaging>
    <name>RapidEye Reader</name>
    <description>
        This module enables the Sentinel Toolbox to read RapidEye data products
    </description>

    <!--
        NOTE: In order to properly load the native libraries, please set the java.library.path
        to  ${outputdir}\lib.
    -->

    <dependencies>
        <dependency>
            <groupId>org.esa.snap</groupId>
            <artifactId>snap-core</artifactId>
            <version>${snapVersion}</version>
        </dependency>
        <dependency>
            <groupId>org.esa.snap</groupId>
            <artifactId>snap-geotiff</artifactId>
            <version>${snapVersion}</version>
        </dependency>
        <dependency>
            <groupId>org.esa.snap</groupId>
            <artifactId>snap-visat-rcp</artifactId>
            <version>${snapVersion}</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.jna</groupId>
            <artifactId>jna</artifactId>
        </dependency>
        <dependency>
            <groupId>org.esa.s2tbx</groupId>
            <artifactId>s2tbx-commons</artifactId>
            <version>0.6.0</version>
        </dependency>
        <dependency>
            <groupId>nitro</groupId>
            <artifactId>nitf</artifactId>
            <version>2.7</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/nitf.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>nitro</groupId>
            <artifactId>nitf-imageio</artifactId>
            <version>2.7</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/nitf.imageio.jar</systemPath>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>windows64</id>
            <activation>
                <os>
                    <family>Windows</family>
                    <arch>amd64</arch>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <overwrite>true</overwrite>
                                    <outputDirectory>${outputdir}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <targetPath>lib</targetPath>
                                            <directory>${basedir}/src/main/resources/lib</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>nitf.jar</include>
                                                <include>nitf.imageio.jar</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <targetPath>lib</targetPath>
                                            <directory>${basedir}/src/main/resources/lib/win64</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>nitf.jni-c.dll</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>windows32</id>
            <activation>
                <os>
                    <family>Windows</family>
                    <arch>x86</arch>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <overwrite>true</overwrite>
                                    <outputDirectory>${outputdir}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <targetPath>lib</targetPath>
                                            <directory>${basedir}/src/main/resources/lib</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>nitf.jar</include>
                                                <include>nitf.imageio.jar</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <targetPath>lib</targetPath>
                                            <directory>${basedir}/src/main/resources/lib/win32</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>nitf.jni-c.dll</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>linux</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <overwrite>true</overwrite>
                                    <outputDirectory>${outputdir}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <targetPath>lib</targetPath>
                                            <directory>${basedir}/src/main/resources/lib</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>nitf.jar</include>
                                                <include>nitf.imageio.jar</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <targetPath>lib</targetPath>
                                            <directory>${basedir}/src/main/resources/lib/linux</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>libnitf.jni-c.so</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>solaris</id>
            <activation>
                <os>
                    <family>solaris</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <overwrite>true</overwrite>
                                    <outputDirectory>${outputdir}/modules/s2tbx-rapideye-reader-${project.version}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <targetPath>lib</targetPath>
                                            <directory>${basedir}/src/main/resources/lib</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>nitf.jar</include>
                                                <include>nitf.imageio.jar</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <targetPath>lib</targetPath>
                                            <directory>${basedir}/src/main/resources/lib/solaris</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>nitf.jni-c.so</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>


</project>
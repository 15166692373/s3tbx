            <permissions>755</permissions>
        </changePermissions>
        <addDirectoryToPath>
            <insertAt>end</insertAt>
            <path>${installdir}</path>
            <scope>user</scope>
        </addDirectoryToPath>
        <createSymLink>
            <linkName>~/Desktop/S1TBX</linkName>
            <target>${installdir}/dat.command</target>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </createSymLink>
        <substitute>
            <files>${installdir}/dat.command</files>
            <type>regexp</type>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALL_DIR@@</pattern>
                    <value>${installdir}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/gpt.command</files>
            <type>regexp</type>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALL_DIR@@</pattern>
                    <value>${installdir}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <deleteFile>
            <abortOnError>0</abortOnError>
            <path>"%USERPROFILE%\.nest"</path>
            <show>0</show>
            <showMessageOnError>0</showMessageOnError>
        </deleteFile>
        <setEnvironmentVariable>
            <name>NEST_HOME</name>
            <value>${installdir}</value>
        </setEnvironmentVariable>
        <writeFile>
            <path>${installdir}/update.ini</path>
            <text>[Update]
url = http://corp.array.ca/nest-web/autoupdate/update.xml
version_id = ${product_version}
update_download_location = ${system_temp_directory}
check_for_updates = 1
</text>
        </writeFile>

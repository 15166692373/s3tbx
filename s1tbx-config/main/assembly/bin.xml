<!-- binary distribution -->

<assembly>
    <id>bin</id>

    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <!--format>zip</format-->
        <format>dir</format>
    </formats>

    <files>
        <file>
            <source>readme.md</source>
            <lineEnding>unix</lineEnding>
            <filtered>true</filtered>
        </file>
    </files>

    <fileSets>

		<fileSet>
            <directory>s1tbx-config/main/bin/common/</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        <fileSet>
            <directs1tbx-config-src/main/licenses</directory>
            <outputDirectory>licenses</outputDirectory>
        </fileSet>
		
		<fileSet>
            <dis1tbx-confignest-src/main/commandline</directory>
            <outputDirectory>commandline</outputDirectory>
        </fileSet>

        <fileSet>
           s1tbx-configory>nest-src/main/bin/win</directory>
            <outputDirectory></outputDirectory>
            <lineEnding>dos</lineEnding>
            <includes>
                <include>**/*.bat</include>
				<include>**/*.ini</include>
            </includes>
        </fileSet>

		<fileSet>
       s1tbx-configrectory>nest-src/main/bin/win</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/*.exe</include>
				<include>**/*.dll</include>
            </includes>
        </fileSet>
		
        <fileSet>
   s1tbx-config <directory>nest-src/main/bin/linux</directory>
            <outputDirectory></outputDirectory>
			<includes>
				<include>**/*.so</include>
			</includes>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>	
		<fileSet>s1tbx-config     <directory>nest-src/main/bin/linux</directory>
            <outputDirectory></outputDirectory>
			<includes>
				<include>**/*.sh</include>
			</includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <files1tbx-config         <directory>nest-src/main/bin/macosx</directory>
            <outputDirectory></outputDirectory>
			<includes>
				<include>**/*.so</include>
			</includes>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>		
		<s1tbx-config
            <directory>nest-src/main/bin/macosx</directory>
            <outputDirectory></outputDirectory>
			<includes>
				<include>**/*.sh</include>
			</includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
		
		<fileSet>
            <directory>../../dist/jdk8/win32/jre</directory>
            <outputDirectory>jre</outputDirectory>
        </fileSet>
    </fileSets>

    <moduleSets>

        <!-- (1) Artifacts that go into 'bin', 'lib' or 'modules' -->
        <moduleSet>
            <excludes>
				<exclude>org.esa.beam:beam-bootstrap</exclude>
				<exclude>org.esa.nest:nest-bootstrap</exclude>
				<exclude>org.esa.nest:nest-benchmark<s1tbx-config>
				<exclude>org.esa.nest:nest-src</exclude>
                <exclude>com.bc.ceres:ceres-*</exclude>
            </excludes>

            <binaries>
				<outputDirectory>modules</outputDirectory>
				<unpack>false</unpack>
                <outputFileNameMapping>${artifactId}-${version}.${extension}</outputFileNameMapping>
                <includeDependencies>false</includeDependencies>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>bin</outputDirectory>
                        <outputFileNameMapping>${artifactId}.${extension}</outputFileNameMapping>
                        <includes>
                            <include>com.bc.ceres:ceres-launcher</include>
                        </includes>
                    </dependencySet>
                    <dependencySet>
                        <outputDirectory>lib</outputDirectory>
						<outputFileNameMapping>${artifactId}-${version}.${extension}</outputFileNameMapping>
                        <excludes>
							<exclude>ncsa.hdf:lib-hdf</exclude>
							<exclude>org.esa.nest:nest-bootstrap</exclude>
							<exclude>org.esa.nest:nest-core</exclude>
							<exclude>org.esa.nest:nest-graph-builder</exclude>
							<exclude>org.esa.nest:nest-op-calibration</exclude>
							<exclude>org.esa.nest:nest-op-coregistration</exclude>
							<exclude>org.esa.nest:nest-op-feature-extraction</exclude>
							<exclude>org.esa.nest:nest-op-orthorectification</exclude>
							<exclude>org.esa.nest:nest-op-sar-tools</exclude>
							<exclude>org.esa.nest:s1tbx-op-sentinel1</exclude>
							<exclude>org.esa.nest:nest-reader-dem</exclude>
							<exclude>org.esa.nest:nest-io</exclude>
							<exclude>org.esa.nest:nest-dat</exclude>
							<exclude>org.jlinda:jlinda-core</exclude>
							<exclude>org.esa.pfa:pfa-core</exclude>
							<exclude>org.esa.pfa:pfa-database</exclude>
							<exclude>org.csa.rstb:rstb-classification</exclude>
							<exclude>org.csa.rstb:rstb-polarimetric-tools</exclude>
                            <exclude>org.esa.beam:beam-*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>

        </moduleSet>

    </moduleSets>

</assembly>

	        <id>ForestAreaClassification</id>
	        <helpId>ForestAreaClassification</helpId>
	        <class>org.esa.nest.dat.actions.OperatorAction</class>
            <icon>esaIcon</icon>
            <parent>PrimitiveFeatureGroup</parent>

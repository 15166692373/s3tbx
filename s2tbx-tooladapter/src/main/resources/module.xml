<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>s2tbx-tool-adapter</symbolicName>
    <version>1.0</version>
    <name>Sentinel-2 Tool Adapter</name>

    <description>Allows the execution of external tools</description>

    <vendor>CS</vendor>
    <contactAddress>ZAC de la Grande Plaine,5 Rue Brindejonc des Moulinais, Toulouse Cedex 5, France </contactAddress>
    <copyright>(c) Copyright 2012-2014 by Brockmann Consult GmbH&lt;br/&gt;(c) Copyright 2014 by CS and contributors.&lt;br/&gt;All rights reserved.</copyright>
    <url>https://earth.esa.int/web/sentinel-tbx/home</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>

    <changelog>
        <![CDATA[
                ]]>
    </changelog>

    <categories>Sentinel</categories>

    <dependency>
        <module>snap-core</module>
    </dependency>
    <dependency>
        <module>snap-gpf</module>
    </dependency>
    <dependency>
        <module>snap-visat-rcp</module>
    </dependency>

    <extension point="snap-ui:actions">
        <action>
            <parent>processing</parent>
            <id>S2tbxToolAdapterOp</id>
            <placeLast>false</placeLast>
            <class>org.esa.s2tbx.ui.tooladapter.interfaces.ToolAdapterAction</class>
            <helpId>toolAdapter</helpId>
            <text>Manage external tools</text>
            <shortDescr>Manage external tools.</shortDescr>
            <mnemonic>T</mnemonic>
        </action>
    </extension>

</module>